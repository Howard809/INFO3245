<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundimage"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="392dp"
        android:layout_height="99dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="592dp"
        android:text="Welcome to TestVitals lab"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="321dp"
        android:layout_height="72dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:text="Ready to take charge of your health"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtHead2"
        android:layout_width="333dp"
        android:layout_height="138dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:text="Find nearby labs book appointments with ease and view your blood test results as soon as they're available"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHead" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="331dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:text="Start by creating an account or sign in if you're already a patient"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHead2" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="136dp"
        android:layout_height="62dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#DA009688"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="136dp"
        android:layout_height="62dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#DA009688"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>